<%- include("header") -%>
<div class="heading" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">
    <form action="/delete" method="POST">
        <% items.forEach(function(item){ %>
        <div class="list">
            <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item._id %>">
            <p><%= item.name %></p>
        </div>
        <hr>
        <% }) %>
        <input type="hidden" value="<%= listTitle %>" name="titleName">
    </form>
    <form method="POST" action="/">
        <input type="text" name="item" placeholder="New Item">
        <button type="submit" name="submit" value="<%= listTitle %>"><span>+</span></button>
    </form>
</div>

<%- include("footer") -%>