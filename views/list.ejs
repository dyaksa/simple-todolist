<%- include("header") -%>
<div class="heading" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">
    <% for(let i = 0; i < lists.length; i++){ %>
    <div class="list">
        <input type="checkbox">
        <p><%= lists[i] %></p>
    </div>
    <hr>
    <% } %>
    <form method="POST" action="/">
        <input type="text" name="list" placeholder="New Item">
        <button type="submit" name="submit" value="<%= listTitle %>"><span>+</span></button>
    </form>
</div>

<%- include("footer") -%>